<%= stylesheet_link_tag "style" %>

<body class="body-qismi">

  <div class="editslar">
  <%= link_to "Edit this post", edit_post_path(@post), class: "btn  b1  mx-2" %>
  <%= link_to "Back to posts", posts_path, class: "btn b2 btn-danger mx-2" %>
  <%= button_to "Delete this post", @post, method: :delete, class: "btn b3 btn-primary mx-2" %>
  </div>

  <div class="container14">   
  <%= render @post %>

  </div>
  <div class="container">
  <%= render 'comments/form', 
  post: @post, 
  comment: @post.comments.build,
  submit_label: "Reply" %>
  <% @comments.each do |comment| %>
  <%= render 'comments/comment', 
  post: @post, 
  comment: comment %>
  <% end %>
  </div>


</body>

